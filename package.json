{
  "name": "tap-outline",
  "displayName": "TAP Outline",
  "publisher": "bessarabov",
  "description": "Outline view for TAP (Test Anything Protocol) result files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onLanguage:tap"
  ],
  "contributes": {
    "languages": [
      {
        "id": "tap",
        "aliases": [
          "TAP"
        ],
        "extensions": [
          ".tap"
        ]
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "vscode:prepublish": "npm run compile",
    "format": "prettier \"src/**/*.{ts,tsx}\" \"__tests__/**/*.json\" --write",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "main": "./out/extension.js"
}
